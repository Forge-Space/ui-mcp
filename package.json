{
  "name": "uiforge-mcp",
  "version": "0.5.0",
  "description": "AI-driven UI generation via Model Context Protocol. Generate React, Next.js, Vue, Angular applications from natural language. Screenshot-to-code, interactive prototypes, design mockups, accessibility auditing. Zero cost, open source.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "uiforge-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "tsup",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/index.js",
    "clean": "rm -rf dist coverage .tsbuildinfo node_modules/.cache",
    "validate": "npm run lint:check && npm run format:check && npm run test",
    "validate:all": "npm run lint; npm run format:check; npx tsc --noEmit; npm test; npm run build",
    "docker:build": "docker build -t uiforge-mcp:latest .",
    "docker:run": "docker run -i uiforge-mcp:latest",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:fix": "eslint src/ --fix",
    "lint:check": "eslint src/ --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --onlyChanged",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "validate-model": "tsx src/scripts/validate-model.ts",
    "deps:check": "ncu",
    "deps:update": "ncu -u"
  },
  "keywords": [
    "mcp",
    "ui",
    "generator",
    "react",
    "nextjs",
    "vue",
    "angular",
    "tailwind",
    "figma",
    "design-system",
    "component-library",
    "shadcn",
    "radix-ui",
    "headless-ui",
    "material-ui",
    "primevue"
  ],
  "author": "Lucas Santana",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "better-sqlite3": "^11.9.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.50.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
